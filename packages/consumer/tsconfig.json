{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "module": "commonjs",
        "rootDir": ".",
        "outDir": "_server",
        "target": "ESNext",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "useUnknownInCatchVariables": false,
        "declaration": true,
        "declarationMap": true,
        "jsx": "react-jsx"
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "_server",
        "_web"
    ]
}